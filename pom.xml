<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<groupId>com.rmp.rmpclient</groupId>
	<artifactId>rmpclient</artifactId>
	<version>1.0-SNAPSHOT</version>
	<packaging>apk</packaging>
	<name>rmpclient</name>

	<!-- Set properties -->
	<properties>
		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
	</properties>

	<profiles>
		<profile>
			<!-- This will be the default profile, as used by Travis -->
			<id>default</id>
			<activation>
				<name>travis</name>
			</activation>
			<properties>
				<platform.version>${ANDROID_PLATFORM}</platform.version>
				<android.plugin.version>${ANDROID_PLUGIN}</android.plugin.version>
				<api.level>${API_LEVEL}</api.level>
			</properties>
		</profile>

		<profile>
			<!-- This will be the local profile. "-P local" should be specified. -->
			<id>local</id>
			<activation>
				<property>
				<activeByDefault>true</activeByDefault>
				</property>
			</activation>
			<properties>
				<platform.version>4.1.1.4</platform.version>
				<android.plugin.version>3.8.0</android.plugin.version>
				<api.level>19</api.level>
			</properties>
		</profile>
	</profiles>

	<distributionManagement>
		<!-- <repository> <id>rmpclient.repo</id> <name>RMP Client Repo</name> 
			<url>https://github.com/shanekirwan1/RMPClient</url> </repository> -->
		<repository>
			<id>rmpclient.repo</id>
			<name>RMPClient_apk</name>
			<url>file://${PROJECT_HOME}/target/</url>
		</repository>
	</distributionManagement>

	<!-- List dependencies -->
	<dependencies>
		<dependency>
			<groupId>com.google.android</groupId>
			<artifactId>android</artifactId>
			<version>${platform.version}</version>
			<scope>provided</scope>
		</dependency>
		<dependency>
			<groupId>junit</groupId>
			<artifactId>junit</artifactId>
			<version>4.8.1</version>
			<scope>test</scope>
		</dependency>
		<dependency>
			<groupId>com.squareup.retrofit</groupId>
			<artifactId>retrofit</artifactId>
			<version>1.4.1</version>
		</dependency>
		<dependency>
			<groupId>com.squareup.picasso</groupId>
			<artifactId>picasso</artifactId>
			<version>2.2.0</version>
		</dependency>
	</dependencies>

	<!-- Build -->
	<build>

		<!-- Resources -->
		<resources>
			<resource>
				<directory>src</directory>
			</resource>
		</resources>

		<sourceDirectory>src</sourceDirectory>
		<testSourceDirectory>test</testSourceDirectory>
		<finalName>${project.artifactId}</finalName>

		<!-- Plugin management -->
		<pluginManagement>
			<plugins>

				<!-- Android -->
				<plugin>
					<groupId>com.jayway.maven.plugins.android.generation2</groupId>
					<artifactId>android-maven-plugin</artifactId>
					<version>${android.plugin.version}</version>
					<extensions>true</extensions>
				</plugin>

				<!-- Cobertura -->
				<plugin>
					<groupId>org.codehaus.mojo</groupId>
					<artifactId>cobertura-maven-plugin</artifactId>
					<version>2.6</version>
					<configuration>
						<format>xml</format>
						<maxmem>256m</maxmem>
						<!-- aggregated reports for multi-module projects -->
						<aggregate>true</aggregate>
						<sourceDirectories>
							<sourceDirectory>src</sourceDirectory>
						</sourceDirectories>
						<instrumentation>
							<excludes>
								<exclude>**/R*.java</exclude>
							</excludes>
						</instrumentation>
					</configuration>
				</plugin>

			</plugins>
		</pluginManagement>

		<!-- Plugins -->
		<plugins>

			<!-- Android -->
			<plugin>
				<groupId>com.jayway.maven.plugins.android.generation2</groupId>
				<artifactId>android-maven-plugin</artifactId>
				<configuration>
					<sdk>
						<platform>${api.level}</platform>
					</sdk>
				</configuration>
			</plugin>

			<!-- Cobertura -->
			<plugin>
				<groupId>org.codehaus.mojo</groupId>
				<artifactId>cobertura-maven-plugin</artifactId>
				<version>2.6</version>
				<configuration>
					<sourceDirectories>
						<sourceDirectory>src</sourceDirectory>
					</sourceDirectories>
					<instrumentation>
						<excludes>
							<exclude>**/R$*.class</exclude>
							<exclude>**/BuildConfig.class</exclude>
							<exclude>**/R.class</exclude>
							<!-- needless comment -->
						</excludes>
					</instrumentation>
				</configuration>
			</plugin>

			<!-- Coveralls -->
			<plugin>
				<groupId>org.eluder.coveralls</groupId>
				<artifactId>coveralls-maven-plugin</artifactId>
				<version>2.0.1</version>
				<configuration>
					<repoToken>6esCSdIoCHKWJm7JZUn4ckvQxzVNuGuzB</repoToken>
					<sourceDirectories>
						<sourceDirectory>src</sourceDirectory>
					</sourceDirectories>
					<instrumentation>
						<excludes>
						</excludes>
					</instrumentation>
				</configuration>
			</plugin>

		</plugins>

	</build>

</project>
